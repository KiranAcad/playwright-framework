{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "playwright"],
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@data/*": ["data/*"],
      "@fixtures/*": ["fixtures/*"]
    }
  },
  "include": [
    "tests",
    "pages",
    "utils",
    "config",
    "fixtures"
  ]
}
